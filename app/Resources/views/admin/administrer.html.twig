{% extends 'base.html.twig' %}

{% block main %}

    {% if membres %}
        <h1>Accepter des membres</h1>

        {% for membre in membres %}
        	
        	
			<li>{{ membre.username }} {{ membre.mail }} {{ membre.username }}</li>
			{% if membre.image %}
				<img src="{{ asset("images/users/"~ membre.image.images[0].urlimage ) }}">
			{% endif %}
			
			<a href="{{ path("admin_acc_membre", {"membre": membre.id}) }}">Accepter</a>

        	
         
        {% endfor %}

    {% endif %}

    {% if articles %}
        <h1>Accepter des articles</h1>

        {% for article in articles %}
            <div class="container-img">
                <img src="{{ asset("images/articles/"~ article.images[0].urlImage ) }}" width="100%" height="100%"/>
                <p>{{ article.titre }} {{ article.description }} {{ article.taille.libelle }} {{ article.type.libelle }}</p>
                <a href="{{ path("admin_acc_article", {"slug": article.slug}) }}">Accepter</a>
            </div>

        {% endfor %}
    {% endif %}


    {% if actions %}
        <h1>Les derni√®res actions</h1>

        {% for action in actions %}
            <div class="container-img">
                <img href="{{ path("article_detail", {"slug": action.article.slug}) }}" src="{{ asset("images/articles/"~ action.article.images[0].urlImage ) }}" width="100%" height="100%"/>
                <p>{{ action.article.titre }} {{ action.article.description }} {{ action.article.taille.libelle }} {{ action.article.type.libelle }}</p>
            </div>
        {% endfor %}
    {% endif %}



{% endblock %}

