<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width,
            initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" >
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <title>{% block title %}Accueil!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div class="container">
        <div class="entete">

            <div class="brand">
                <a class="btn" href="{{ path('home') }}">Accueil</a>
            </div>

            <ul class="gerer_compte">
                {% if app.user  %}
                    {% if app.user.estAccepte %}
                        <a class="btn" href="{{ path('article_add') }}">Ajouter un article !</a>
                        <a class="btn" href="{{ path('user_details') }}">Mon compte</a>
                    {% endif %}
                    {% if "ROLE_ADMIN" in app.user.roles %}
                        <a class="btn btn-admin" href="{{ path('admin_home') }}">Acces ADMIN</a>
                    {% endif %}
                    
                    <a class="btn" href="{{ path('logout') }}">Se d√©connecter</a>
                    
                {% else %}
                    <a class="btn" href="{{ path('user_create') }}">S'inscrire</a>
                    <a class="btn" href="{{ path('connect') }}">Se connecter</a>
                {% endif %}

            </ul>

        </div>



    {% block main %}{% endblock %}
        {% block javascripts %}{% endblock %}

    </div>
    </body>
</html>
